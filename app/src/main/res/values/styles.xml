<resources>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeMainTranslucentToolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeMain" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/textDarkRed</item>
        <item name="colorPrimaryDark">@color/textDarkRed</item>
        <item name="colorAccent">@color/textDarkRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeRegister" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/textDarkRed</item>
        <item name="colorPrimaryDark">@color/textDarkRed</item>
        <item name="colorAccent">@color/textDarkRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/rooms_search_hint</item>
    </style>

    <declare-styleable name="IndicatorSeekBar">
        <attr name="isb_progress_1" format="float" />
        <attr name="isb_progress_2" format="float" />
    </declare-styleable>
</resources>
