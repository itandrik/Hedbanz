<resources>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeMainTranslucentToolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeMain" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/textDarkRed</item>
        <item name="colorPrimaryDark">@color/textDarkRed</item>
        <item name="colorAccent">@color/textDarkRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="ThemeRegister" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/textDarkRed</item>
        <item name="colorPrimaryDark">@color/textDarkRed</item>
        <item name="colorAccent">@color/textDarkRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/rooms_search_hint</item>
    </style>

    <declare-styleable name="IndicatorSeekBar">
        <attr name="isb_progress_1" format="float" />
        <attr name="isb_progress_2" format="float" />
    </declare-styleable>

    <style name="WordSettingEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/google_blue</item>
        <item name="colorControlHighlight">@color/google_red</item>
    </style>

    <style name="AppTheme.RedProgressBar">
        <item name="colorAccent">@color/textDarkRed</item>
    </style>

    <style name="FabInviteStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_invite</item>
        <item name="backgroundTint">@color/google_green</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="playersMenuCollapsingToolbarTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
</resources>
