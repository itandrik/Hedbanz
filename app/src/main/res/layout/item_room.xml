<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeightLarge">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/roomCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/flRoomIconContainer"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:padding="4dp">

                <com.transcendensoft.hedbanz.presentation.custom.widget.SquareImageView
                    android:id="@+id/ivRoomIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    app:tint="@color/textWhite" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvActive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/flRoomIconContainer"
                android:layout_alignLeft="@id/flRoomIconContainer"
                android:layout_alignRight="@id/flRoomIconContainer"
                android:layout_alignTop="@id/flRoomIconContainer"
                android:background="@drawable/room_active_background"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/rooms_active"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivRoomLocked"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_room_locked" />

            <LinearLayout
                android:id="@+id/llUsersContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tvRoomName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/llUsersContainer"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@id/ivRoomLocked"
                android:layout_toRightOf="@id/flRoomIconContainer"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center_vertical|left"
                android:textColor="@color/textPrimary"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pbRoomLoading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <include
        android:id="@+id/llErrorContainer"
        layout="@layout/layout_item_server_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>