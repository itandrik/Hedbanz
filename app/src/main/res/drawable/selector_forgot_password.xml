<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_focused="false">
        <layer-list>

            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/textPrimary" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="3dp" android:right="3dp" android:top="-4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/textWhite"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/google_red" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="3dp" android:right="3dp" android:top="-4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/textWhite"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>